# Environment variables for YeetFlow Worker
# Copy this file to .env and configure the values

# Database configuration (config builds async URL for SQLite)
DATABASE_URL=sqlite:///yeetflow.db

# Steel.dev API configuration (optional - enables mock mode if not provided)
STEEL_API_KEY=your_steel_api_key_here

# Application settings
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS configuration
CORS_ALLOW_ORIGINS=*
SOCKETIO_CORS=*

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-in-production

# Retry configuration
RETRY_BASE_DELAY=1.0
RETRY_MAX_ATTEMPTS=3
RETRY_MAX_DELAY=30.0

## Local Storage (Default)
STORAGE_BACKEND=local
ARTIFACTS_DIR=./artifacts

## S3-Compatible Storage (Future)
# STORAGE_BACKEND=s3
# S3_ENDPOINT_URL=https://s3.amazonaws.com
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_BUCKET=yeetflow-artifacts
# S3_REGION=us-east-1
